{
    "openapi": "3.0.0",
    "info": {
        "title": "Simple Invoice API",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://invoice-app.test/api/v1",
            "description": "Development server"
        }
    ],
    "paths": {
        "/addresses": {
            "get": {
                "tags": [
                    "Addresses"
                ],
                "summary": "Get the list of addresses",
                "operationId": "getAddressList",
                "responses": {
                    "200": {
                        "description": "The addresses"
                    }
                }
            }
        },
        "/clients": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Get the list of clients (paginated)",
                "operationId": "getClientList",
                "responses": {
                    "200": {
                        "description": "The clients"
                    }
                }
            }
        },
        "/clients/{clientId}": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Get a client by id",
                "operationId": "getClient",
                "parameters": [
                    {
                        "name": "clientId",
                        "in": "path",
                        "required": true,
                        "description": "The id of the client",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The client"
                    }
                }
            }
        },
        "/invoices": {
            "get": {
                "tags": [
                    "Invoices"
                ],
                "summary": "Get the list of invoices (paginated)",
                "operationId": "getInvoiceList",
                "responses": {
                    "200": {
                        "description": "The invoices"
                    }
                }
            }
        },
        "/invoices/{invoiceId}": {
            "get": {
                "tags": [
                    "Invoices"
                ],
                "summary": "Get an invoice by id",
                "operationId": "getInvoice",
                "parameters": [
                    {
                        "name": "invoiceId",
                        "in": "path",
                        "required": true,
                        "description": "The id of the invoice",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The invoice"
                    }
                }
            }
        },
        "/my/settings": {
            "get": {
                "tags": [
                    "My"
                ],
                "summary": "Get the user settings",
                "operationId": "getMySettings",
                "responses": {
                    "200": {
                        "description": "Settings"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Addresses",
            "description": "Addresses"
        },
        {
            "name": "Clients",
            "description": "Clients"
        },
        {
            "name": "Invoices",
            "description": "Invoices"
        },
        {
            "name": "My",
            "description": "My"
        }
    ]
}